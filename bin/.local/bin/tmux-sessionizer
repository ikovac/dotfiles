#!/bin/bash

path=$((find ~ -mindepth 1 -maxdepth 1 -type d 2> /dev/null; find ~/Studion ~/Personal -mindepth 1 -maxdepth 2 -type d 2> /dev/null) | fzf)
session_name=$(basename "$path" | tr . _)

if [[ -z $session_name ]]; then
  echo "No session selected" 1>&2
  exit 1
fi

# tmux is not running
if [[ -z $TMUX ]]; then
  if ! tmux has-session -t "$session_name" 2> /dev/null; then
    tmux new-session -s "$session_name" -c "$path"
  else
    tmux attach-session -t "$session_name"
  fi
  exit 0
fi

# tmux is running and session doesn't exist
if ! tmux has-session -t "$session_name" 2> /dev/null; then
  tmux new-session -s "$session_name" -c "$path" -d
fi

tmux switch-client -t "$session_name"
